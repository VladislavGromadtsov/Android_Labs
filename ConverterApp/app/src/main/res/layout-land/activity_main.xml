<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="horizontal">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="weight_button_clicked"
        android:text="Weight" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="distance_button_clicked"
        android:text="Distance" />

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1">

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:onClick="time_button_clicked"
        android:text="Time" />

</LinearLayout>
</LinearLayout>